  <div class="step1-header">
    <h1 class="font-weight-bold text-center">Step 1/3 <br>Select the playlist you wanna share</h1>
    <div class="mt-3 mb-2">
      <a href="" style="margin-left: 65vw"class="inactive-color" id="next-link"> Next ></a>
    </div>
    <input type="text" class="search__input mb-3" id="input-search" placeholder="Search playlist">
  </div>

<div class="container">
  <div class="playlist-row-container d-flex align-items-center flex-column">
  <% @playlists.each do |playlist| %>
      <div class="d-flex mb-3 playlist-row" data-name="<%= playlist[:name] %>">
        <div class="d-none"><%= link_to '', destination_path(info: { playlist_id: playlist[:id], playlist_name: playlist[:name] }) %></div>
        <img class="playlist-cover" src="<%= playlist[:cover_url] %>" alt="">
        <div class="playlist-details ml-3 d-flex justify-content-center flex-column">
          <h3 class="title"> <%= playlist[:name] %> </h3>
          <h5 class="tracks"> <%= playlist[:track_count] %> track(s)</h5>
        </div>
      </div>
      <% end %>
    </div>
</div>
